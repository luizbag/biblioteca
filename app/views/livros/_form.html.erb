<%= form_for @livro, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titulo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :edicao, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :edicao, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ano, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ano, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :isbn, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :isbn, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :paginas, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :paginas, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :autor_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :autor_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :colecao_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :colecao_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :editora_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :editora_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :usuario_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :usuario_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                livros_path, :class => 'btn' %>
  </div>
<% end %>
